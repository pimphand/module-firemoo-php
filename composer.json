{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "pimphand/firemoo",
    "type": "library",
    "description": "Laravel package for Firestore-like API and WebSocket integration",
    "keywords": [
        "laravel",
        "firestore",
        "websocket",
        "realtime",
        "database",
        "api"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "faisol dwiki",
            "email": "faisaldwiki69@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Firemoo\\Firemoo\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Firemoo\\Firemoo\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Firemoo\\Firemoo\\FiremooServiceProvider"
            ],
            "aliases": {
                "Firestore": "Firemoo\\Firemoo\\Facades\\Firestore",
                "WebSocket": "Firemoo\\Firemoo\\Facades\\WebSocket"
            }
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "archive": {
        "exclude": [
            "/app",
            "/artisan",
            "/routes",
            "/database",
            "/storage",
            "/public",
            "/resources",
            "/bootstrap",
            "/config/app.php",
            "/config/auth.php",
            "/config/cache.php",
            "/config/database.php",
            "/config/filesystems.php",
            "/config/logging.php",
            "/config/mail.php",
            "/config/queue.php",
            "/config/services.php",
            "/config/session.php",
            "/vendor",
            "/node_modules",
            "/vite.config.js",
            "/package.json",
            "/package-lock.json",
            "/composer.laravel.json",
            "/.env",
            "/.env.*",
            "/.idea",
            "/.vscode",
            "/coverage",
            "*.log",
            "*.cache",
            ".phpunit.result.cache"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "version": "1.0.0"
}

